{
  "name": "greyworm-epi",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@arcgis/core": "^4.18.1",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/user-event": "^12.8.3",
    "@types/arcgis-js-api": "^4.18.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.20.6",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-router-dom": "^5.1.7",
    "axios": "^0.21.1",
    "immutable": "^4.0.0-rc.12",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3",
    "web-vitals": "^1.1.1",
    "@babel/preset-typescript": "^7.12.1",
    "@testing-library/react": "^11.2.5",
    "jest": "^26.6.0",
    "regenerator-runtime": "^0.13.7"
  },
  "scripts": {
    "start": "npm run copy && react-scripts start",
    "build": "npm run copy && react-scripts build",
    "test": "jest --colors --coverage --coverageDirectory=/output/coverage/jest",
    "eject": "react-scripts eject",
    "copy": "cp -r ./node_modules/@arcgis/core/assets ./public/assets"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__tests__/App.js",
      "\\.(css|less)$": "<rootDir>/__tests__/App.js"
    },
    "coverageReporters": [
      "text",
      "cobertura"
    ]
  }
}
